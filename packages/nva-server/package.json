{
  "name": "nva-server",
  "version": "0.3.140",
  "description": "frontend static server",
  "main": "dist/index.js",
  "jsnext:main": "es/index.js",
  "repository": "https://github.com/ali322/nva/tree/master/packages/nva-server",
  "bin": {
    "nva-server": "bin/server.js"
  },
  "files": [
    "dist",
    "es",
    "src",
    "asset",
    "bin"
  ],
  "scripts": {
    "clean": "rimraf dist es",
    "build": "npm run build:commonjs && npm run build:es",
    "prepublish": "npm run clean && npm run build",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel --plugins add-module-exports src --out-dir dist",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "lint": "eslint src"
  },
  "author": "alichen",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "cross-env": "^3.2.4",
    "eslint-cli": "^1.1.0",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "compression": "^1.6.2",
    "connect": "^3.6.0",
    "connect-history-api-fallback": "^1.3.0",
    "glob": "^7.1.2",
    "http-proxy-middleware": "^0.17.4",
    "json-schema-faker": "^0.4.0",
    "lodash": "^4.17.4",
    "method-override": "^2.3.9",
    "morgan": "^1.8.1",
    "opn": "^5.0.0",
    "serve-favicon": "^2.4.2",
    "serve-static": "^1.12.1"
  }
}
